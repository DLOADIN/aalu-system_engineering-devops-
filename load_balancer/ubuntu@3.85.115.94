#!/usr/bin/env bash
#update and installs haproxy

sudo apt-get -y update 
sudo apt-get -y install haproxy
sudo chown $USER:USER /etc/haproxy/haproxy.cfg

echo "
frontend buydloading.tech
	bind *:80
	mode https
	default_backend 

backend app
   balance roundrobin
   server 6325-web-01 35.172.186.17:80 check
   server 6325-web-02 3.80.87.226:80 check" >> /etc/haproxy/haprxy.cfg

sudo service haproxy restart
