#!/bin/bash

# Update package lists and install Nginx
apt-get update
apt-get install -y nginx

# Ensure Nginx is listening on port 80 (this is default behavior)
# Modify the default index.html to include the string "Holberton School"
echo "Holberton School for the win!" > /var/www/html/index.html

# Restart Nginx using service command instead of systemctl
service nginx restart

# Ensure Nginx is running (just in case)
service nginx status > /dev/null 2>&1

